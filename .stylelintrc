{
	"extends": ["stylelint-config-recommended", "stylelint-config-standard"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
			}
		],
		"rule-empty-line-before": [
			"always-multi-line",
			{
				"except": ["first-nested"],
				"ignore": ["after-comment"]
			}
		]
	}
}
